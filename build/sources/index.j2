<!DOCTYPE html>
<html lang="{{ page.lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        {{ builder.styles|safe }}
    </style>
    <title>{{ page.title }}</title>
</head>
<body>
    <div>
        <main>
            <img id="side-banner" src="{{ look.image }}" />
    
            <div class="sep"></div>
    
            <div id="content">
                <h1>{{ look.message }}</h1>
                
                <div id="links">
                    {% for section_name, section_content in sections.items() %}
                        <section>
                            <h3>{{ section_name }}</h3>

                            <div class="sep"></div>

                            <ul>
                                {% for link_name, link_data in section_content.items() %}
                                    <li data-icon="{{ link_data.icon }}"><a href="{{ link_data.url }}">{{ link_name }}</a></li>
                                {% endfor %}
                            </ul>
                        </section>

                        {% if loop.index0 % 2 == 0 and not loop.last %}
                            <div class="sep"></div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </main>
        <nav>
            <img width="35" src="{{search.icon}}" />
            <form action="{{ search.engine }}" method="get">
                <input autofocus name="q" type="text" placeholder="{{ search.placeholder }}" />
            </form>
        </nav>
    </div>
</body>
</html>